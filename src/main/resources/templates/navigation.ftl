<div class="row mt-4">
    <div class="col-sm-12">
        <h2 id="navigation"><i class="fas fa-paragraph"></i> Navigation</h2>
        <table class="table table-striped table-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Key Binding</th>
                    <th scope="col">Command</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><kbd>C</kbd>-<kbd>b</kbd></td>
                    <td>backward-char</td>
                    <td>Moves backward one character</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>f</kbd></td>
                    <td>forward-char</td>
                    <td>Moves forward one character</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>p</kbd></td>
                    <td>previous-line</td>
                    <td>Moves point to the previous line</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>n</kbd></td>
                    <td>next-line</td>
                    <td>Moves point to the next line</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>a</kbd></td>
                    <td>move-beginning-of-line</td>
                    <td>Moves point to the beginning one current line</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>e</kbd></td>
                    <td>move-end-of-line</td>
                    <td>Moves point to the end of current line</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>x</kbd> <kbd>[</kbd></td>
                    <td>backward-page</td>
                    <td>Moves poit backward to the page boundary</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>x</kbd> <kbd>]</kbd></td>
                    <td>forward-page</td>
                    <td>Moves poit forward to the page boundary</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>b</kbd></td>
                    <td>backward-word</td>
                    <td>Moves the point backward one word</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>f</kbd></td>
                    <td>forward-word</td>
                    <td>Moves the point forward one word</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>a</kbd></td>
                    <td>backward-sentence</td>
                    <td>Moves the point backward one sentence</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>e</kbd></td>
                    <td>forward-sentence</td>
                    <td>Moves the point forward one sentence</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>{</kbd></td>
                    <td>backward-paragraph</td>
                    <td>Moves the point backward one paragraph</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>}</kbd></td>
                    <td>forward-paragraph</td>
                    <td>Moves the point forward one paragraph</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>M</kbd>-<kbd>←</kbd></td>
                    <td>backward-sexp</td>
                    <td>Moves the point backward one balanced expression</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>M</kbd>-<kbd>→</kbd></td>
                    <td>forward-sexp</td>
                    <td>Moves the point forward one balanced expression</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>M</kbd>-<kbd>a</kbd></td>
                    <td>beginning-of-defun</td>
                    <td>Moves point to the beginning of a function</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>M</kbd>-<kbd>e</kbd></td>
                    <td>end-of-defun</td>
                    <td>Moves the point the end of a function</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>&lt;</kbd></td>
                    <td>beginning-of-buffer</td>
                    <td>Moves point to the beginning of buffer</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>&gt;</kbd></td>
                    <td>end-of-buffer</td>
                    <td>Moves the point to the end of buffer</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>v</kbd></td>
                    <td>scroll-up-command</td>
                    <td>Scrolls up in the current buffer</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>c</kbd></td>
                    <td>scroll-down-command</td>
                    <td>Scrolls down in the current buffer</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>C</kbd> <kbd>v</kbd></td>
                    <td>scroll-other-window</td>
                    <td>Scrolls down in the adjacent window</td>
                </tr>
                <tr>
                    <td><kbd>C</kbd>-<kbd>l</kbd></td>
                    <td>recenter</td>
                    <td>Toggles placing point in screen in the top, middle and bottom of window</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>g</kbd> <kbd>g</kbd></td>
                    <td>goto-line</td>
                    <td>Takes the point to the given line in the buffer</td>
                </tr>
                <tr>
                    <td><kbd>M</kbd>-<kbd>g</kbd> <kbd>c</kbd></td>
                    <td>goto-char</td>
                    <td>Moves point to the next occurrence of the given char</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
